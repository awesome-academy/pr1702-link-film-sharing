<li type="none", class="list-users">
  <div class="row">
    <div class="col-md-2 clearfix">
      <% if user.picture.url %>
        <%= image_tag user.picture, alt: user.name, class: :avatar %>
      <% else %>
        <%= image_tag "user.jpg", alt: user.name, class: :avatar %>
      <% end %>
    </div>
    <div class="col-md-4 clearfix">
      <%= link_to(user.name, user) if user.name %>
      <% if current_user != user %>
        <div class="addfriend-form"><%= render "users/addfriend_form", user: user %></div>
      <% end %>
    </div>
  </div>
</li>
